@model HojapaApplication.Models.Categorie
@{
    ViewBag.Title = "Browse Reservaties";
}
<div class="genre">
    <h3><em>@Model.Name</em> Reservaties</h3>
    <ul id="item-list">
        @foreach (var item in Model.ReservatieForms)
        {
            <li>
                <a href="@Url.Action("Details", new { id = item.ID })">

                    <span>@item.ReservatieFormName</span>
                </a>
            </li>
        }
    </ul>
</div>