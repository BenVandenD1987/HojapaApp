@model IEnumerable<HojapaApplication.Models.Leden>

@{
    ViewBag.Title = "Index";
}
<h2>Index</h2>
@using (Html.BeginForm("Index", "Leden", FormMethod.Get))
{
        <table style="width:100%" border="0">
            <tr>
                <th>
                    @Html.Label("Zoeken: ")   @Html.TextBox("Search_Data", ViewBag.FilterValue as string)
                    <button class="btn btn-secondary my-2 my-sm-0" type="submit">Zoeken</button>
                </th>
                <th>
                    @Html.Label("Filter: ")   @Html.DropDownList("SoortLid", new SelectList(ViewBag.SoortLid))
                    <input type="submit" value="Zoeken" />
                </th>
                <th>
                    @Html.ActionLink("Verwijder filter", "Index", "Leden",
                 new { ViewBag.AllData }, null)
                </th>

            </tr>
        </table>
}
        <table class="table">
       

                <tr>
